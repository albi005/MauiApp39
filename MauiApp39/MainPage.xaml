<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp39"
    x:Class="MauiApp39.MainPage">

    <Grid Padding="32">
        <local:MyLayout>
            <!--  Setting IsVisible to false gets rid of the problem  -->
            <Line
                IsVisible="true"
                Stroke="Blue"
                X1="0"
                X2="100"
                Y1="0"
                Y2="50" />
        </local:MyLayout>

        <Label
            x:Name="label"
            Text="Uncomment lines in code-behind for performance info"
            VerticalOptions="End" />
    </Grid>



</ContentPage>
